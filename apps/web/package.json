{
  "name": "perkcord-web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --grep-invert @visual",
    "test:e2e:visual": "playwright test --grep @visual",
    "test:e2e:visual:update": "playwright test --grep @visual --update-snapshots",
    "test:storybook": "node ./scripts/storybook-test.mjs",
    "test:storybook:update": "node ./scripts/storybook-test.mjs --update",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "dependencies": {
    "convex": "^1.14.1",
    "next": "^14.2.0",
    "next-themes": "^0.3.0",
    "perkcord-root": "file:../..",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^14.21.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^2.1.4",
    "@eslint/js": "^8.57.0",
    "@playwright/test": "^1.49.1",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/addon-interactions": "^8.1.0",
    "@storybook/nextjs": "^10.1.11",
    "@storybook/react": "8.6.14",
    "@storybook/test-runner": "^0.19.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^13.24.0",
    "postcss": "^8.4.49",
    "prettier": "^3.2.5",
    "storybook": "^8.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "5.5.4",
    "typescript-eslint": "^7.10.0",
    "vitest": "^1.6.0"
  }
}
